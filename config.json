{
    "app_name": "Kokoro Consumer - By Tharindu Wijayasekara",
    "version": "1.0.0",
    "description": "Configuration for Kokoro Consumer application.",
    "max_retries": 2,
    "logging": {
        "level": "INFO",
        "file": "kokoro-consumer.log"
    },
    "api": {
        "host": "http://host.docker.internal:8888",
        "endpoints": {
            "speech": "/v1/audio/speech"
        },
        "timeout": 300
    },
    "tts_settings": {
        "model": "kokoro",
        "input": "<fill the text to be converted to speech>",
        "--voice": "af_heart+af_sarah+af_bella+ef_dora",
        "--voice": "af_heart(2)+af_jessica(1)+af_sky(3)",
        "voice": "af_heart(2)+af_jessica(1)+af_sky(4)",
        "--voice": "am_michael+am_fenrir+am_michael+bm_lewis",
        "response_format": "mp3",
        "download_format": "mp3",
        "speed": 1.07,
        "stream": false,
        "return_download_link": true,
        "lang_code": "a",
        "volume_multiplier": 1,
        "normalization_options": {
            "normalize": true,
            "unit_normalization": true,
            "url_normalization": true,
            "email_normalization": true,
            "optional_pluralization_normalization": true,
            "phone_normalization": true,
            "replace_remaining_symbols": true
        }
    },
    "replacements": {
        " . . . ": "...",
        ". . . ": "...",
        "....": "...",
        "* * *": "...",
        " — ": "...",
        "OceanofPDF.com": "ocean-of-PDF-dot-com",
        "Berenike": "Béra-knee-kee",
        "Ganelon": "Ganey-lon",
        "Aristedes": "Aristeedees",
        "Palekiller": "Pale-killer",
        "McGonagall": "McGonogall",
        "unDursleyish": "unDursleeish",
        "Voldemort": "Volder-mort",
        "Gryffindor": "Gryffin-door",
        "Slytherin": "Slither-in",
        "Extrasolarian": "Extrasølàrian",
        "Delos": "Dë-lòss",
        "Selene": "Seleene",
        "What're": "Whattere",
        "what're": "whattere",
        "How're": "Howwer",
        "how're": "howwer",
        "Maxime": "Maxeeme"
    },
    "replacements_edge_tts": {
        " . . . ": "...",
        ". . . ": "...",
        "....": "...",
        "* * *": "...",
        " — ": "...",
        "OceanofPDF.com": "ocean-of-PDF-dot-com"
    },
    "edge_tts_api": {
        "host": "http://host.docker.internal:5050",
        "endpoints": {
            "speech": "/v1/audio/speech"
        },
        "timeout": 300
    },
    "edge_tts_settings": {
        "input": "<fill the text to be converted to speech>",
        "voice": "en-US-AvaNeural",
        "response_format": "mp3",
        "speed": 1.05,
        "model": "tts-1-hd"
    },
    "use_edge_tts_service": true,
    "batch_size": 5
}