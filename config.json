{
    "app_name": "Kokoro Consumer - By Tharindu Wijayasekara",
    "version": "1.0.0",
    "description": "Configuration for Kokoro Consumer application.",
    "max_retries": 2,
    "logging": {
        "level": "INFO",
        "file": "kokoro-consumer.log"
    },
    "books_folder": "/app/books",
    "chapterized_books_folder": "/app/books/OratorChapters",
    "singled_books_folder": "/app/books/Orator",
    "chapter_paragraph_limit_seconds": 3580,
    "api": {
        "host": "http://host.docker.internal:8888",
        "host_round_robin": [],
        "endpoints": {
            "speech": "/v1/audio/speech"
        },
        "timeout": 300
    },
    "tts_settings": {
        "model": "kokoro",
        "input": "<fill the text to be converted to speech>",
        "--voice": "af_heart(2)+af_alloy(2)+af_jessica(1)+af_nicole(1)+af_jadzia(1)+af_nova(1)",
        "voice": "af_heart(2)+af_sky(1)+bm_lewis(1)",
        "--voice": "am_echo(7)+am_onyx(2)+am_puck(1)",
        "response_format": "wav",
        "download_format": "wav",
        "speed": 1.1,
        "stream": false,
        "return_download_link": true,
        "lang_code": "a",
        "normalization_options": {
            "normalize": true,
            "unit_normalization": true,
            "url_normalization": true,
            "email_normalization": true,
            "optional_pluralization_normalization": true,
            "phone_normalization": true,
            "replace_remaining_symbols": true
        }
    },
    "replacements": {
        " . . . ": "...",
        ". . . ": "...",
        "....": "...",
        "* * *": "...",
        " — ": "...",
        "—": "...",
        "...": ", ",
        "OceanofPDF.com": "ocean-of-PDF-dot-com",
        "Berenike": "Béra-knee-kee",
        "Ganelon": "Ganey-lon",
        "Aristedes": "Aristeedees",
        "Palekiller": "Pale-killer",
        "McGonagall": "McGonogall",
        "unDursleyish": "unDursleeish",
        "Voldemort": "Volder-mort",
        "Gryffindor": "Gryffin-door",
        "Slytherin": "Slither-in",
        "Extrasolarian": "Extrasølàrian",
        "Delos": "Dë-lòss",
        "Selene": "Seleene",
        "What're": "Whattere",
        "what're": "whattere",
        "How're": "Howwer",
        "how're": "howwer",
        "Maxime": "Maxeeme",
        "breathed": "breethed",
        "Breathed": "Breethed",
        "cum": " come",
        "Beth": "Bëth",
        "beth": "bëth"
    },
    "replacements_edge_tts": {
        " . . . ": "...",
        ". . . ": "...",
        "....": "...",
        "* * *": "...",
        " — ": "...",
        "*": "",
        "OceanofPDF.com": "ocean-of-PDF-dot-com"
    },
    "edge_tts_api": {
        "host": "http://host.docker.internal:5050",
        "host_round_robin": [
            "http://host.docker.internal:5050",
            "http://host.docker.internal:5051",
            "http://host.docker.internal:5052",
            "http://host.docker.internal:5053",
            "http://host.docker.internal:5054",
            "http://host.docker.internal:5055",
            "http://host.docker.internal:5056",
            "http://host.docker.internal:5057",
            "http://host.docker.internal:5058",
            "http://host.docker.internal:5059",
            "http://host.docker.internal:5060",
            "http://host.docker.internal:5061",
            "http://host.docker.internal:5062",
            "http://host.docker.internal:5063",
            "http://host.docker.internal:5064",
            "http://host.docker.internal:5065",
            "http://host.docker.internal:5066",
            "http://host.docker.internal:5067",
            "http://host.docker.internal:5068",
            "http://host.docker.internal:5069"
        ],
        "endpoints": {
            "speech": "/v1/audio/speech"
        },
        "timeout": 300,
        "--prosody_mods": "<speak version='1.0' xml:lang='en-US'><voice name='en-US-AvaNeural'><prosody rate='+7%' pitch='0%' range='-60%'>____TEXT____</prosody></voice></speak>",
        "prosody_mods": "____TEXT____"
    },
    "edge_tts_settings": {
        "input": "<fill the text to be converted to speech>",
        "voice": "en-US-AvaNeural",
        "-voice": "en-US-BrianNeural",
        "-voice": "en-US-AndrewNeural",
        "-voice": "en-HK-YanNeural",
        "response_format": "mp3",
        "speed": 1.05,
        "model": "tts-1-hd"
    },
    "use_edge_tts_service": false,
    "use_wav_to_mp3": true,
    "use_get_request": false,
    "batch_size": 60,
    "batch_stagger": 150,
    "--ignore_upto_paragraph": 1400,
    "--take": 600,
    "from_scratch": true
}